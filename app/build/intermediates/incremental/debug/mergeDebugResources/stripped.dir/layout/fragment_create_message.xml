<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                             

    
                 
                                        
                                                                                         
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="479dp"
        android:orientation="vertical"
        android:padding="@dimen/side_margin" android:tag="layout/fragment_create_message_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.create_message.CreateMessageFragment">

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:layout_gravity="start|top"
            android:layout_marginTop="@dimen/margin_between_elements"
            android:layout_weight="1"
            android:gravity="start|top"
            android:hint="Content"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:minWidth="@dimen/logo_width"
            android:scrollHorizontally="false"
            android:selectAllOnFocus="true" />
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_between_elements"
            android:minWidth="@dimen/logo_width"
            android:tag="binding_1"                               
            android:text="Add" />
        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_between_elements"
            android:minWidth="@dimen/logo_width"
            android:selectAllOnFocus="true" />

    </LinearLayout>
         